<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lawnroad.template.mapper.LawyerTemplateMapper">

    <!-- 템플릿 테이블 등록 -->
    <insert id="insertTemplate"
            parameterType="com.lawnroad.template.dto.TemplateDto"
            useGeneratedKeys="true" keyProperty="no">
        INSERT INTO template (
            `user_no`,
            `category_no`,
            `type`,
            `name`,
            `description`,
            `price`,
            `thumbnail_path`,
            `discount_rate`
        )
        VALUES (
                   #{userNo},
                   #{categoryNo},
                   #{type},
                   #{name},
                   #{description},
                   #{price},
                   #{thumbnailPath},
                   #{discountRate}
               )
    </insert>

    <!-- 에디터 기반 세부 정보 등록 -->
    <insert id="insertEditorBasedTemplate">
        INSERT INTO tmpl_editor_based (
            no,
            content,
            var_json,
            ai_enabled
        ) VALUES (
                     #{no},
                     #{content},
                     #{varJson},
                     #{aiEnabled}
                 )
    </insert>

    <!-- 파일 기반 세부 정보 등록 -->
    <insert id="insertFileBasedTemplate">
        INSERT INTO tmpl_file_based (
            no,
            path_json
        ) VALUES (
                     #{no},
                     #{pathJson}
                 )
    </insert>



</mapper>